<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <AssemblyName>DynamicMaps.Server</AssemblyName>
    <RootNamespace>DynamicMaps.Server</RootNamespace>
    <Nullable>enable</Nullable>
    <!-- The two lines below will set the output path for the binaries -->
    <OutputPath>bin\$(Configuration)\$(ProjectName)\$(AssemblyName)-$(Version)\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SPTarkov.Common" Version="4.0.1" />
    <PackageReference Include="SPTarkov.DI" Version="4.0.1" />
    <PackageReference Include="SPTarkov.Server.Core" Version="4.0.1" />
  </ItemGroup>
  
  <!-- Gets the version property from the Directory.Build.props file -->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <ItemGroup>
      <VersionCs Include="$(ProjectDir)Version.cs" />
      <Compile Include="@(VersionCs)" Exclude="@(VersionCs)" /> <!-- Resolves double include -->
      <FileWrites Include="@(VersionCs)" />
    </ItemGroup>

    <WriteLinesToFile File="@(VersionCs)" Overwrite="true" Lines="// HACK: autogenerated file containing version info from VERSION.txt" />
    <WriteLinesToFile File="@(VersionCs)" Lines="namespace DynamicMaps.Server{public static class BuildInfo {public const string Version = &quot;$(Version)&quot;%3B}}" />
  </Target>
  
  <Target Name="ServerPostBuild" AfterTargets="PostBuildEvent">
    <Message Importance="high" Text="Server Built" />
    <ItemGroup>
      <OutputDLL Include="$(ProjectDir)$(OutDir)$(TargetName).dll" />
      <DebugFile Include="$(ProjectDir)$(OutDir)$(TargetName).pdb" Condition=" '$(Configuration)' == 'Debug'" /><!--Include the pdb if debuging -->
      <License Include="$(SolutionDir)LICENSE" />
      <Config Include="$(ProjectDir)config.json" />
    </ItemGroup>

    <!-- Clears the tarkov game and release folders -->
    <RemoveDir Directories="$(ActiveTarkovDir)SPT\user\mods\mpstark-dynamicmaps" />
    <RemoveDir Directories="$(SolutionDir)release\SPT" />

    <!-- Copies the output and config to tarkov game folder -->
    <Copy SourceFiles="@(OutputDLL);@(Config);@(License);@(DebugFile)" DestinationFolder="$(ActiveTarkovDir)SPT\user\mods\mpstark-dynamicmaps\%(RecursiveDir)" />
    
    <!-- Copies the files to combined release folder -->
    <Copy SourceFiles="@(OutputDLL);@(Config);@(License);@(DebugFile)" DestinationFolder="$(SolutionDir)release\SPT\user\mods\mpstark-dynamicmaps\%(RecursiveDir)" />
  </Target>
</Project>